{% extends "layouts/base.twig" %}

{% block body %}
<div x-data="{ sidebarOpen: true, sidebarToggle: false }" class="h-screen flex overflow-hidden">
    <!-- Sidebar -->
    <aside
        :class="sidebarToggle ? 'lg:w-20' : 'w-64'"
        class="bg-indigo-800 text-white flex flex-col transition-all duration-300 ease-in-out relative flex-shrink-0"
    >

        <div :class="sidebarToggle ? 'lg:justify-center lg:p-4' : 'justify-between p-6'" class="border-b border-indigo-700 transition-all duration-300">
            <div class="flex items-center gap-3">
                <!-- Logo/Icon -->
                <div class="flex-shrink-0 w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-comments text-white text-xl"></i>
                </div>
                <!-- Texte (caché en mode réduit) -->
                <div :class="sidebarToggle ? 'lg:hidden' : ''" class="sidebar-text">
                    <h1 class="text-xl font-bold">{{ app.name }}</h1>
                    <p class="text-xs text-indigo-200">{{ app.description }}</p>
                </div>
            </div>
        </div>

        <nav class="flex-1 p-4 space-y-1 overflow-y-auto custom-scrollbar">
            <a href="{{ url('dashboard') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-chart-line w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Dashboard</span>
            </a>
            <a href="{{ url('calendar') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-calendar-alt w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Calendrier</span>
            </a>
            <a href="{{ url('campaigns') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-bullhorn w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Campagnes</span>
            </a>
            {% if session.is_admin %}
            <a href="{{ url('users') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-users w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Utilisateurs</span>
            </a>
            <a href="{{ url('supports') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-newspaper w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Supports</span>
            </a>
            <a href="{{ url('settings') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-cog w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Paramètres</span>
            </a>
            <a href="{{ url('maintenance') }}" class="flex items-center px-4 py-3 rounded-lg hover:bg-indigo-700 transition-colors" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <i class="fas fa-wrench w-5 flex-shrink-0"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 sidebar-text">Maintenance</span>
            </a>
            {% endif %}
        </nav>

        <div class="p-4 border-t border-indigo-700">
            <div class="flex items-center mb-3" :class="sidebarToggle ? 'lg:justify-center' : ''">
                <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="font-semibold text-sm">{{ session.user_prenom[:1] }}{{ session.user_nom[:1] }}</span>
                </div>
                <div :class="sidebarToggle ? 'lg:hidden' : ''" class="ml-3 user-info">
                    <p class="font-medium text-sm">{{ session.user_prenom }} {{ session.user_nom }}</p>
                    <p class="text-xs text-indigo-300">{{ session.user_email }}</p>
                </div>
            </div>
            <a href="{{ url('auth/logout') }}" class="flex items-center justify-center px-4 py-2 bg-indigo-700 hover:bg-indigo-600 rounded-lg transition-colors" :class="sidebarToggle ? 'lg:px-2' : ''">
                <i class="fas fa-sign-out-alt flex-shrink-0" :class="sidebarToggle ? '' : 'mr-2'"></i>
                <span :class="sidebarToggle ? 'lg:hidden' : ''" class="logout-text">Déconnexion</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <header class="bg-white border-b border-gray-200 px-4 md:px-8 py-4 flex-shrink-0 z-50">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <!-- Toggle Sidebar Button -->
                    <button @click="sidebarToggle = !sidebarToggle" class="hidden lg:flex items-center justify-center w-10 h-10 rounded-lg hover:bg-gray-100 transition-colors">
                        <i class="fas fa-bars text-gray-600"></i>
                    </button>
                    <h2 class="text-xl md:text-2xl font-bold text-gray-900">
                        {% block page_title %}Dashboard{% endblock %}
                    </h2>
                </div>
                <div class="flex items-center space-x-4">
                    {% block header_actions %}{% endblock %}
                </div>
            </div>
        </header>

        <!-- Content -->
        <div class="flex-1 overflow-y-auto p-8">
            {% block alerts %}
                {% if success %}
                <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
                    <i class="fas fa-check-circle mr-2"></i>{{ success }}
                </div>
                {% endif %}
                {% if error %}
                <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                    <i class="fas fa-exclamation-circle mr-2"></i>{{ error }}
                </div>
                {% endif %}
            {% endblock %}

            {% block content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}
