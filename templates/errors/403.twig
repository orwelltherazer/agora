{% extends 'layouts/base.twig' %}

{% block title %}Erreur 403 - Accès refusé{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-x me-2"></i>
                        Accès refusé
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Erreur 403</h5>
                    <p class="card-text">
                        Vous n'avez pas l'autorisation d'accéder à cette ressource.
                    </p>

                    {% if message %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endif %}

                    <div class="mt-4">
                        <a href="/agora/public/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>
                            Retour à l'accueil
                        </a>
                        <a href="/agora/public/auth/login" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
