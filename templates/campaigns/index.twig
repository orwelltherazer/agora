{% extends 'layouts/admin.twig' %}

{% block title %}Campagnes{% endblock %}
{% block page_title %}Campagnes{% endblock %}

{% block header_actions %}
<a href="{{ url('campaigns/create') }}" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 flex items-center gap-2">
    <i class="fas fa-plus"></i>
    Nouvelle campagne
</a>
{% endblock %}

{% block content %}
<!-- Filtres -->
<div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <form method="GET" class="flex flex-wrap gap-4">
        <div class="flex-1 min-w-64">
            <input type="text" name="search" value="{{ filters.search ?? '' }}"
                   placeholder="Rechercher une campagne..."
                   class="w-full px-4 py-2 border rounded-lg">
        </div>
        <select name="statut" class="px-4 py-2 border rounded-lg">
            <option value="">Tous les statuts</option>
            <option value="brouillon" {{ filters.statut == 'brouillon' ? 'selected' : '' }}>Brouillon</option>
            <option value="en_validation" {{ filters.statut == 'en_validation' ? 'selected' : '' }}>En validation</option>
            <option value="validee" {{ filters.statut == 'validee' ? 'selected' : '' }}>Validée</option>
            <option value="publiee" {{ filters.statut == 'publiee' ? 'selected' : '' }}>Publiée</option>
            <option value="archivee" {{ filters.statut == 'archivee' ? 'selected' : '' }}>Archivée</option>
        </select>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
            Filtrer
        </button>
        <a href="{{ url('campaigns') }}" class="px-4 py-2 border rounded-lg hover:bg-gray-50">
            Réinitialiser
        </a>
    </form>
</div>

<!-- Liste -->
<div class="bg-white rounded-lg shadow-sm">
    {% if campaigns is not empty %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Visuel</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Campagne</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Demandeur</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Période</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Supports</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for campaign in campaigns %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            {% if campaign.visuel %}
                            <img src="{{ asset(campaign.visuel.chemin) }}" alt="{{ campaign.visuel.nom_original }}" class="w-16 h-16 object-cover rounded shadow-sm">
                            {% else %}
                            <div class="w-16 h-16 bg-gray-100 rounded flex items-center justify-center">
                                <i class="fas fa-image text-gray-400"></i>
                            </div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-900">{{ campaign.titre }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            {{ campaign.demandeur }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if campaign.statut == 'en_validation' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs rounded-full bg-orange-100 text-orange-800 whitespace-nowrap">En validation</span>
                            {% elseif campaign.statut == 'validee' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs rounded-full bg-green-100 text-green-800 whitespace-nowrap">Validée</span>
                            {% elseif campaign.statut == 'publiee' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800 whitespace-nowrap">Publiée</span>
                            {% elseif campaign.statut == 'brouillon' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800 whitespace-nowrap">Brouillon</span>
                            {% elseif campaign.statut == 'archivee' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs rounded-full bg-gray-400 text-white whitespace-nowrap"><i class="fas fa-archive mr-1"></i>Archivée</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                            {{ campaign.date_event_debut|date('d/m/Y') }}
                            {% if campaign.date_event_fin and campaign.date_event_fin != campaign.date_event_debut %}
                                → {{ campaign.date_event_fin|date('d/m/Y') }}
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex flex-wrap gap-1">
                                {% for support in campaign.supports|slice(0, 3) %}
                                    <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-700 rounded">{{ support }}</span>
                                {% endfor %}
                                {% if campaign.supports|length > 3 %}
                                    <span class="px-2 py-0.5 text-xs text-gray-500">+{{ campaign.supports|length - 3 }}</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right space-x-2">
                            <a href="{{ url('campaigns/show/' ~ campaign.id) }}" class="text-indigo-600 hover:text-indigo-900" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ url('campaigns/edit/' ~ campaign.id) }}" class="text-gray-600 hover:text-gray-900" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-12">
            <i class="fas fa-inbox text-gray-400 text-5xl mb-4"></i>
            <p class="text-gray-500 mb-4">Aucune campagne trouvée</p>
            <a href="{{ url('campaigns/create') }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                <i class="fas fa-plus mr-2"></i>
                Créer une campagne
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
